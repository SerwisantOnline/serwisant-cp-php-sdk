<div class="card my-2">
  <div class="card-header">
    <span class="glyphicon glyphicon-info-sign icon-margin pull-right"></span>
    {{ t(_self, 'title') }}
  </div>
  <table class="table table-bordered card-table">
    <tbody>
    <tr>
      <td class="column-definition">{{ t(_self, 'service_supplier') }}</td>
      <td>
        {% include 'shared/service_supplier_row.html.twig' with {'serviceSupplier': repair.serviceSupplier} %}
      </td>
    </tr>

    {% if configuration.panelDevices and repair.device %}
      <tr>
        <td class="column-definition">{{ t(_self, 'device') }}</td>
        <td><a href="{{ path('device', {'id': repair.device.ID}) }}">{{ repair.device.displayName }}</a></td>
      </tr>
    {% endif %}
    <tr>
      <td class="column-definition">{{ t(_self, 'number') }}</td>
      <td>{{ repair.rma }}</td>
    </tr>
    <tr>
      <td class="column-definition">Rodzaj</td>
      <td>{{ repair.type.name }}</td>
    </tr>
    {% if repair.vendor %}
      <tr>
        <td class="column-definition">{{ t(_self, 'vendor') }}</td>
        <td>{{ repair.vendor }}</td>
      </tr>
    {% endif %}
    {% if repair.model %}
      <tr>
        <td class="column-definition">{{ t(_self, 'model') }}</td>
        <td>{{ repair.model }}</td>
      </tr>
    {% endif %}
    <tr>
      <td class="column-definition">{{ t(_self, 'serial') }}</td>
      <td>{{ repair.serial }}</td>
    </tr>
    {% if repair.warranty %}
      <tr>
        <td class="column-definition">{{ t(_self, 'warranty_repair') }}</td>
        <td><i class="glyphicon glyphicon-check"></i></td>
      </tr>
      {% if repair.warrantyPurchaseDate %}
        <tr>
          <td class="column-definition">{{ t(_self, 'purchase_date') }}</td>
          <td>{{ repair.warrantyPurchaseDate }}</td>
        </tr>
      {% endif %}
      {% if repair.warrantyPurchaseDocument %}
        <tr>
          <td class="column-definition">{{ t(_self, 'purchase_doc') }}</td>
          <td>{{ repair.warrantyPurchaseDocument }}</td>
        </tr>
      {% endif %}
    {% else %}
      <tr>
        <td class="column-definition">{{ t(_self, 'warranty_repair') }}</td>
        <td><i class="glyphicon glyphicon-unchecked"></i></td>
      </tr>
    {% endif %}
    <tr>
      <td class="column-definition">{{ t(_self, 'delivery_type') }}</td>
      <td>
        {{ t('transport_types', repair.delivery) }}
        {% if addresses and repair.pickUpAddress %}
          {{ t(_self, 'from') }}
          {{ repair.pickUpAddress.street }} {{ repair.pickUpAddress.building }}, {{ repair.pickUpAddress.postalCode }} {{ repair.pickUpAddress.city }}
        {% endif %}
      </td>
    </tr>
    <tr>
      <td class="column-definition">{{ t(_self, 'collection_type') }}</td>
      <td>
        {{ t('transport_types', repair.collection) }}
        {% if addresses and repair.returnAddress %}
          {{ t(_self, 'to') }}
          {{ repair.returnAddress.street }} {{ repair.returnAddress.building }}, {{ repair.returnAddress.postalCode }} {{ repair.returnAddress.city }}
        {% endif %}
      </td>
    </tr>
    </tbody>
  </table>
</div>
