<div class="bg-light p-5 rounded mt-3">
  <h1>{{ t(_self, 'title') }}</h1>
  <p class="lead">{{ t(_self, 'description') }}</p>
</div>

{{ form_errors(_self, errors) }}

<div class="bg-light p-5 rounded mt-3">
  <form method="post" action="{{ path('set_password') }}">
    {{ form_field({type: 'hidden', argument: 'resetToken', value: token}, formParams, []) }}

    <div class="row">
      <div class="col-sm-12 col-md-4">
        <input type="hidden" input="login" value="FakeUser001">
        {{ form_field({type: 'password', argument: 'password', caption: t(_self, 'password'), capture_argument_errors: ['resetToken']}, formParams, errors) }}
        <div class="progress password-progress">
          <div id="password-strength-indicator" class="progress-bar" role="progressbar" aria-valuenow="0"
               aria-valuemin="0" aria-valuemax="100"></div>
        </div>

        <br>
        {{ form_field({type: 'password', argument: 'passwordConfirmation', caption: t(_self, 'password_confirmation')}, formParams, errors) }}

        <br>
        <a href="{{ path('dashboard') }}" class="btn btn-secondary mb-3">{{ t(_self, 'cancel') }}</a>
        <button type="submit" class="btn btn-primary mb-3">{{ t(_self, 'submit') }}</button>
      </div>
    </div>
  </form>
</div>