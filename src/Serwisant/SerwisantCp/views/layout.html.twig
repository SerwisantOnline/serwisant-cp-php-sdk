<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <title>{{ pageTitle }}</title>
    <meta name="theme-color" content="#7952b3">

    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css"
          integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl"
          crossorigin="anonymous">

    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css"
          integrity="sha512-mSYUmp1HYZDFaVKK//63EcZq4iFWFjxSL+Z3T/aCt4IO9Cejm03q3NKKYN6pFQzY0SBOr8h+eCIAZHPXcpZaNw=="
          crossorigin="anonymous"/>

    <link rel="stylesheet" href="{{ path('assets', {file: 'layout', type: 'css'}) }}"/>
</head>
<body>

{% if me is defined %}
    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Navbar</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarsExampleDefault"
                    aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarsExampleDefault">
                <ul class="navbar-nav me-auto mb-2 mb-md-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">{{ t(_self, 'repairs') }}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">{{ t(_self, 'tickets') }}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">{{ t(_self, 'messages') }}</a>
                    </li>
                </ul>
            </div>

            <ul class="navbar-nav me-auto mb-2 mb-md-0">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="dropdown01" data-bs-toggle="dropdown"
                       aria-expanded="false">{{ me.customer.displayName }} </a>
                    <ul class="dropdown-menu" aria-labelledby="dropdown01">
                        <li><a class="dropdown-item" href="#">{{ t(_self, 'me_edit') }}</a></li>
                        <li><a class="dropdown-item"
                               href="{{ path('destroy_session') }}">{{ t(_self, 'me_logout') }}</a>
                        </li>
                    </ul>
                </li>
            </ul>

        </div>
    </nav>
{% endif %}

{% if app.flash.anyErrors() %}
    <div class="container">
        <div class="alert alert-danger p-5 rounded mt-3 text-center" role="alert">
            {% for alert in app.flash.getErrors() %}
                <p>{{ alert }}</p>
            {% endfor %}
        </div>
    </div>
{% endif %}

{% if app.flash.anyMessages() %}
    <div class="container">
        <div class="alert alert-success p-5 rounded mt-3 text-center" role="alert">
            {% for alert in app.flash.getMessages() %}
                <p>{{ alert }}</p>
            {% endfor %}
        </div>
    </div>
{% endif %}

<main class="container">
    {{ innerHTML | raw }}
</main>

<footer>
    <div class="container">
        <hr>
        <p class="pull-left">
            <small>
                {{ subscriber.displayName }}
                {% if subscriber.address %}
                    <br>
                    {{ subscriber.address.street }} {{ subscriber.address.building }}, {{ subscriber.address.postalCode }} {{ subscriber.address.city }}
                {% endif %}
                {% if subscriber.taxId %}
                    <br>
                    NIP {{ subscriber.taxId }}
                {% endif %}
            </small>
        </p>
        <ul class="list-unstyled pull-right text-right">
            {% for agreement in agreements %}
                <li>
                    <small>
                        <a href="{{ path('agreement', {id: agreement.ID}) }}"
                           data-title="{{ agreement.description }}">{{ agreement.description }}</a>
                    </small>
                </li>
            {% endfor %}
        </ul>
    </div>
</footer>

<div class="alert text-center cookiealert" role="alert">
    <h6>
        {{ t(_self, 'cookie_info_html') }}
        <button type="button" class="btn btn-success btn-sm acceptcookies">
            {{ t(_self, 'cookie_accept') }}
        </button>
    </h6>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"
        integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
        crossorigin="anonymous"></script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0"
        crossorigin="anonymous"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"
        integrity="sha512-T/tUfKSV1bihCnd+MxKD0Hm1uBBroVYBOYSk1knyvQ9VyZJpc/ALb4P0r6ubwVPSGB2GvjeoMAJJImBG12TiaQ=="
        crossorigin="anonymous"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/locales/bootstrap-datepicker.pl.min.js"
        integrity="sha512-ScqJL8X5IqP89pKmQnXULodix6OkrTtcWiTdJxPGPGdrncyJkI7KOwNRPqzZ6lWnTk/u5xboSjEeYQgeyOHyhQ=="
        crossorigin="anonymous"></script>

<script src="https://cdn.jsdelivr.net/gh/Wruczek/Bootstrap-Cookie-Alert@gh-pages/cookiealert.js"></script>

<script>
  var application_js_options = {}
</script>
<script src="{{ path('assets', {file: 'layout', type: 'js'}) }}"></script>

</body>
</html>
