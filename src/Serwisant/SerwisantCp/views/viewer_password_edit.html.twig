<form method="post" action="{{ path('viewer_password') }}">
  <div class="panel-spaced bg-light rounded">
    <h1>{{ t(_self, 'title') }}</h1>
    <p class="lead">{{ t(_self, 'description') }}</p>
  </div>

  {{ form_errors(_self, errors) }}

  <div class="panel-spaced bg-light rounded">
    <div class="row mb-3">
      <div class="col-6">
        {{ form_field({type: 'password', argument: 'user.currentPassword', caption: t(_self, 'currentPassword')}, form_params, errors) }}
      </div>
      <div class="col-6">
        <input type="hidden" id="user_login" value="FakeUser001">
        {{ form_field({type: 'password', argument: 'user.password', caption: t(_self, 'password')}, form_params, errors) }}
        <div class="progress password-progress">
          <div id="password-strength-indicator" class="progress-bar" role="progressbar" aria-valuenow="0"
               aria-valuemin="0" aria-valuemax="100"></div>
        </div>
      </div>
    </div>
  </div>

  <div class="clearfix">
    <div class="mb-3 float-end form-buttons">
      <a href="{{ path('dashboard') }}" class="btn btn-secondary mb-3">{{ t(_self, 'cancel') }}</a>
      <button type="submit" class="btn btn-primary mb-3">{{ t(_self, 'submit') }}</button>
    </div>
  </div>
</form>
